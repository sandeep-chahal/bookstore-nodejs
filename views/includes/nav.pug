mixin nav(current,loggedIn)
    nav
        a.logo(href="/")
            img(src="/img/logo.svg", alt="logo")
            h3 BookStore
        .signature BookStore
        ul.menu
            li: a.menu-item(href="/cart" data-active=`${current==="cart"}`) Cart
            li: a.menu-item(href="/dashboard" data-active=`${current==="dashboard"}`) Dashboard
            li: a.menu-item(href=`/${loggedIn?"logout":"login"}` data-active=`${current==="auth"}`)= `${loggedIn?"Logout":"Login"}`